{
  "compilerOptions": {
    "jsx": "react",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "ESNext",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "allowJs": true,
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./app",
    "incremental": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
  },
  "exclude": [
    "node_modules"
  ],
"include": ["app/**/*"],
  "ts-node": {
    "swc": true
  }
}
